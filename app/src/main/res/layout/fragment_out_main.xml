<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_titlebar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_5"
            android:background="@color/app_color"
            android:scaleType="center"
            android:src="@mipmap/ic_keyboard_backspace_white_24dp" />

        <TextView
            android:id="@+id/title_titlebar"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@color/app_color"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/moor_titlebar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@color/app_color"
            android:src="@mipmap/ic_more_horiz_white_24dp"
            android:visibility="visible" />

    </LinearLayout>

    <com.andview.refreshview.XRefreshView
        android:id="@+id/Out_XRefreshView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/Out_Record_ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white_"
            android:dividerHeight="@dimen/dp_2"
            android:scrollbarSize="@dimen/dp_3"
            android:scrollbarThumbVertical="@color/app_color" />
    </com.andview.refreshview.XRefreshView>


</LinearLayout>
