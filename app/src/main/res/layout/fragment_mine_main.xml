<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.etsoft.scales.view.TitleBar
        android:id="@+id/Mine_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_15">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Mine_Head"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            app:placeholderImage="@drawable/ic_launcher"
            app:roundedCornerRadius="@dimen/dp_30" />

        <TextView
            android:id="@+id/Mine_UserName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="13"
        android:background="@color/white_"
        android:scrollbarSize="@dimen/dp_3"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/AppTheme_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_https_white_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="入库统计"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/Mine_Input_Statistics"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="234kg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_info_outline_white_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="出库统计"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/Mine_Out_Statistics"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="456kg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Mine_Notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_alarm_white_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="历史通知"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_chevron_right_white_24dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Mine_Server"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_alarm_white_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="服务站点"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_chevron_right_white_24dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Mine_DevManager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_pregnant_woman_white_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="设备管理"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_chevron_right_white_24dp" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/Mine_Setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_supervisor_account_white_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="设置"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_chevron_right_white_24dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Mine_Logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_library_books_white_1_24dp" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="退出登录"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/ic_chevron_right_white_24dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
