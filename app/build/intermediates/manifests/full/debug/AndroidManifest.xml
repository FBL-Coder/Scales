<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etsoft.scales"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" /> <!-- NFC权限声明 -->
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name="com.etsoft.scales.app.MyApp"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >

        <!-- 欢迎页/广告页 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSplash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 首页 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.MainActivity"
            android:launchMode="singleTask" />

        <!-- 登陆 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 注册账号 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <!-- 忘记密码 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.ForgetPassActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 我的>修改密码 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.EditPassActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 历史通知 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.RecordNotificationActivity"
            android:screenOrientation="portrait" />

        <!-- 通知详情 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.NotificationInfoActivity"
            android:screenOrientation="portrait" />

        <!-- 出库详情 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.OutInfoActivity"
            android:screenOrientation="portrait" />

        <!-- 设备列表 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.DevListActivity"
            android:screenOrientation="portrait" />
        <!-- 添加设备 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.AddDevActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 入库想详情 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.InputInfoActivity"
            android:screenOrientation="portrait" />

        <!-- 入库记录 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.InputRecordActivity"
            android:screenOrientation="portrait" />

        <!-- 添加入库 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.AddInputAvtivity"
            android:screenOrientation="portrait"
            android:theme="@style/activity.Theme.Transparent"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <!-- 添加出库 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.AddOutAvtivity"
            android:screenOrientation="portrait"
            android:theme="@style/activity.Theme.Transparent"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 服务站点列表 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.ServerStationActivity"
            android:screenOrientation="portrait" />

        <!-- 服务站点详情 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.ServerStationInfoActivity"
            android:screenOrientation="portrait" />

        <!-- 客户注册 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.RegisterUserActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 客户查询 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.UserQueryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- 个人信息 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.SelfActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <!-- 入库失败记录 -->
        <activity
            android:name="com.etsoft.scales.ui.activity.UploadFailedActivity"
            android:screenOrientation="portrait" />

        <!-- 打印机服务 -->
        <service android:name="com.smartdevice.aidl.IZKCService" >
            <intent-filter>
                <action android:name="com.zkc.aidl.all" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <!-- 自启动 -->
        <receiver android:name="com.etsoft.scales.receiver.ContentReceiver" >
            <intent-filter android:priority="1000" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <!-- 定位服务 -->
        <service android:name="com.amap.api.location.APSService" />

        <!-- 高德定位 -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="b48f2379ed9473e9dd834db19558143b" />

        <provider
            android:name="com.luck.picture.lib.PictureFileProvider"
            android:authorities="com.etsoft.scales.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.luck.picture.lib.PictureSelectorActivity"
            android:theme="@style/activity.Theme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.luck.picture.lib.PicturePreviewActivity"
            android:theme="@style/activity.Theme" />
        <activity
            android:name="com.luck.picture.lib.PictureVideoPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensor"
            android:theme="@style/activity.Theme" />
        <activity
            android:name="com.luck.picture.lib.PictureExternalPreviewActivity"
            android:theme="@style/activity.Theme" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.yalantis.ucrop.PictureMultiCuttingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.luck.picture.lib.PicturePlayAudioActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.smartdevice.aidltestdemo.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.smartdevice.aidltestdemo.PSAMActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.PSAMActivity2"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.PSAMActivityV2"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.PrinterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.ScannerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.CustomerScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.ManeticCardActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.NfcActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >

            <!-- TECH_DISCOVERED类型的nfc -->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartdevice.aidltestdemo.nfc.NFCActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.nfc.NFCAcmdActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.scan.ScanInstructionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.smartdevice.aidltestdemo.scan.ScanSetActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name="com.smartdevice.aidltestdemo.IDCardActivity" />
    </application>

</manifest>